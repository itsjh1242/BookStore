<!DOCTYPE html>
    <html>
    <%- include('../../partials/head'); %>
    <style>
      .wrapper{
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 50px; min-width: 100px;
        }
        .content{
            margin: 2rem;
            border-radius: 30px;
            background-color: #FAFAFA;
            width: 700px; height: auto;
        }
    </style>
    <body>
        <header>
          <%- include('../../partials/header', {
            signinStatus: signinStatus,
            userName: userName
          }); %>
        </header>
    <main>
      <div class="wrapper">
        <ol class="list-group list-group-numbered content">
          <form method="POST">
            <% for(var i = 0; i < br.length; i++){ %>
              <li class="list-group-item d-flex justify-content-between align-items-start">
                <div style="width: 100px; height: 150px;">
                  <img src="../images/book/book<%= br[i].book_num %>.jpeg" class="card-img-top" alt="..." height = "auto" width = "auto">
                </div>
                <div class="ms-2 me-auto">
                  <div class="fw-bold">
                    <input name = "mychk" id = "mychk" onclick="chkCliked(this)" class="form-check-input mt-0" type="checkbox" value="<%= br[i].book_price * br[i].book_value %>, <%=br[i].book_index%>" aria-label="Checkbox for following text input">
                    <%= br[i].book_title %>
                  </div>
                  단가: <%= br[i].book_price %><br>
                  수량: <%= br[i].book_value %><br>
                  총 가격: <%= br[i].book_price * br[i].book_value %>
                  <br>
                </div>
                <% if(br[i].book_value > 1) { %>
                  <span class="badge bg-primary rounded-pill">중복 구매!</span>
                <% } %>
              </li>
            <% } %>
          </ol>
          <div class="card" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title">결제 정보</h5>
              <h6 class="card-subtitle mb-2 text-muted"></h6>
              <p id="totalprice" class="card-text">합계: <span id="totalpricespan">0</span>원</p>
              <input name="gocredit" type="submit" class="btn btn-primary" value="결제" onclick="chkClieckMaster()">
              <input name="selected" type="hidden" value = "">
            </div>
          </div>
        </div>
      </form>
    <footer>
    <%- include('../../partials/footer'); %>
    </footer>

    <script>
      function chkCliked(chk){
        let array = chk.value.split(',');
        if(chk.checked == true){
          totalpricespan.textContent = Number(totalpricespan.textContent) + Number(array[0]);
        } else {
          totalpricespan.textContent = Number(totalpricespan.textContent) - Number(array[0]);
        }
      }

      function chkClieckMaster(){
        const query = 'input[name="mychk"]:checked';
        const selectedEls = document.querySelectorAll(query);
        document.getElementsByName("selected").value = selectedEls;
      }
    </script>

    </body>
</html>